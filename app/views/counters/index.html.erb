<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Counters</h3>
    </div>
    <div class="panel-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @counters.each do |counter| %>
          <tr>
            <td><%= counter.name %></td>
            <td><%= link_to 'Show', counter %></td>
            <td><%= link_to 'Edit', edit_counter_path(counter) %></td>
            <td><%= link_to 'Destroy', counter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Counter', new_counter_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
