<% if current_user && current_user.role == "Admin" %>
  <%= render "pages/reports" %>
<% elsif current_user %>
  <h1 class="text-center">
    <%= current_user.counter.name.titleize %>
  </h1>
  <div class="text-center">
    <%= current_user.firstname.titleize %>
  </div>
  <hr/>
  <div class="row">
    <% Entry.feedback_option_list.each do |smiley| %>
      <div class="col-md-3 col-xs-3">
        <%= link_to image_tag("svg_smileys/#{smiley[1]}.svg", alt: smiley[0]), send_feedback_entries_path(feedback: smiley[1]), remote: false %>
        <div class="text-center">
          <h2><%= smiley[0] %></h2>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12 hidden-md hidden-lg text-center">
      <br/>
      <br/>
      <br/>
      <br/>
      <br/>
      <br/>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    </div>
  </div>
<% end %>
