<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Customer Response Statistic</h3>
  </div>
  <div class="panel-body">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Counter Name</th>
      <th>User Fullname</th>
      <th>User Email</th>
      <th>User Role</th>
      <th>Sangat Puas</th>
      <th>Puas</th>
      <th>Cukup Puas</th>
      <th>Tidak Puas</th>
    </tr>
  </thead>

  <tbody>
    <% @counters.each do |counter| %>
      <tr>
            <td><%= counter.name %></td>
        <% if counter.users.present? %>
          <% counter.users.each do |user| %>
            <td><%= user.firstname %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <% if user.entries.present? %>
                <td><%= user.entries.count(3) %></td>
                <td><%= user.entries.count(2) %></td>
                <td><%= user.entries.count(1) %></td>
                <td><%= user.entries.count(0) %></td>
            <% else %>
              <td colspan="4">This user have no feedback yet.</td>
            <% end %>
          <% end %>
        <% else %>
          <td colspan="7">This counter have no users and feedback yet.</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>

